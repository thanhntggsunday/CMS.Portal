@model Common.DTO.DTO.AboutDto

@{
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>About</h2>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            About
            @*<small>Control panel</small>*@
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i>About</a></li>
            <li class="active"></li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="container-fluid">
         


            <div class="row">
                <div class="col-xs-8">

                    <!-- /.box -->
                    
                    <div>
                        <form class="aboutForm" id="aboutForm">

                            <input type="text" name="id" disabled class="form-control d-none hidden" id="id">

                            <div class="form-group">
                                <label>Giới thiệu:</label><br>
                                <textareas type="text" name="Introduce" class="form-control" id="Introduce" placeholder=""> </textareas>
                            </div>
                            
                            <div class="form-group">
                                <label>Liên hệ:</label><br>
                                <textareas type="text" name="Contact" class="form-control" id="Contact" placeholder=""> </textareas>
                            </div>

                            <div class="form-group">
                                <label>Số điện thoại:</label><br>
                                <input type="text" name="PhoneNumber" class="form-control" id="PhoneNumber" placeholder="">
                            </div>

                            <div class="form-group">
                                <label>Email:</label><br>
                                <input type="text" name="Email" class="form-control" id="Email" placeholder="">
                            </div>

                            <div class="form-group">
                                <label>Địa chỉ:</label><br>
                                <input type="text" name="Address" class="form-control" id="Address" placeholder="">
                            </div>

                            <div class="form-group">
                                <label>Thời gian mở cửa:</label><br>
                                <input type="text" name="OpenTime" class="form-control" id="OpenTime" placeholder="">
                            </div>


                            <div class="form-group">
                                <button name="ok" id="ok">Lưu</button>
                                <button name="cancel" id="cancel">Hủy</button>
                            </div>



                        </form>
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>


            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
        <!-- /.row -->
        <!-- Main row -->
        <!-- /.row (main row) -->



    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->




    @section Scripts{

        <script src="~/Asset/eLearning/Admin/Scripts/about.js"></script>
    }
