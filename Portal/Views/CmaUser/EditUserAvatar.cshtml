@model Common.ViewModel.System.AppUserViewModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            User Manage
            @*<small>Control panel</small>*@
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">User</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->



        <div class="container-fluid">
            <label value="EDIT" id="edit-flag" class="d-none hidden"></label>
            <label data-value-id="@Model.Id.ToString()" id="user-id" class="d-none hidden"></label>
            <div class="myprofile-box">
                <div class="box">
                    <div class="box-body ">
                        <h4 class="login-box-msg"><b>Edit user</b> </h4>



                        <form class="userform">
                            <input type="text" name="id" disabled class="form-control d-none hidden" id="id">
                            <span id="msg-error"></span>




                            <div class="form-group">
                                <div class="col-md-2">
                                    <label>Avatar:</label><br>
                                    <img src="@Model.Avatar" id="Picture" height="50" width="50" />
                                </div>
                                <div class="col-md-8">
                                    <br />
                                    <br />
                                    <input type="file" id="Browse" name="Browse" multiple="multiple" />
                                    <input type="text" name="Avatar" class="form-control d-none hidden" id="avatar" value="@Model.Avatar">
                                    <br />
                                 
                                </div>
                            </div>


                            <div class="clearfix">
                                <br />
                            </div>
                            <br />

                            <div class="modal-footer col-md-1">
                                <button type="button" id="saveImg" class="btn btn-info">Submit</button>
                              
                            </div>


                        </form>
                    </div>
                </div>
            </div>



        </div>


    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->




@section Scripts{

 
    <script src="~/Asset/Common/Admin/Script/user_fileupload.js"></script>

}



