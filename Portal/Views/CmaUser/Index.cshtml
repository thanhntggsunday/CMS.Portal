@model Common.ViewModel.System.AppUserViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            User Manage
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">User</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->


        <div class="container-fluid">
            <div class="row">

                <div id="div-btn-add-emp" class="col-sm-12 col-md-1 col-lg-1" float-left
                     style="padding-bottom: 20px;float: right; display:flex; justify-content:flex-end;">
                    <button type="button" id="btnAddEmp" class="btn w-100 btn-info" style="float: right;"
                            data-toggle="modal"
                            data-target="#modal-lg-assign-role">

                        <i class="fa fa-fw fa-plus"></i>
                        <b>Create</b>
                    </button>
                </div>
            </div>



            <div class="row">
                <div class="col-xs-12">

                    <!-- /.box -->

                    <div class="box">

                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="tbl_users" class="table table-bordered table-striped">
                            </table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>





        <!-- /.container-fluid -->
        <!-- /.container-fluid -->
        <!-- /.row -->
        <!-- Main row -->
        <!-- /.row (main row) -->

      

        <form id="userForm" class="userForm" title="Dialog Title" style="display: none">
          
            <div class="col-md-12">
                <label value="000" id="edit-flag" class="form-control d-none hidden"></label>
                <input type="text" name="id" disabled class="form-control d-none hidden" id="id">
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Email:</label><br>
                    <input type="text" name="email" class="form-control" id="email" placeholder="Email" required="required">
                </div>
                
                <div class="form-group">
                    <label>Password:</label><br>
                    <input type="password" name="password" class="form-control" id="password" placeholder="Password">
                </div>
                
                <div class="form-group">
                    <label>BirthDay:</label><br>
                    <input type="date" name="birth_day" class="form-control" id="birth_day" placeholder="Birthday">
                </div>
                
                <div class="form-group">
                    <label>Gender:&nbsp;&nbsp;</label>

                    <label>Male</label>
                    <input id="male" name="gender" value="MALE" checked type="radio">
                    <label>&nbsp;&nbsp;</label>
                    <label>Female</label>
                    <input id="female" name="gender" value="FEMALE" type="radio">
                </div>
            </div>
            
            @*---------------------*@

            <div class="col-md-6">
                <div class="form-group">
                    <label>Full name:</label><br>
                    <input type="text" name="full_name" class="form-control" id="full_name" placeholder="Full name" required="required">
                </div>
                
                <div class="form-group">
                    <label>Address:</label><br>
                    <input type="text" name="address" class="form-control" id="address" placeholder="Address">

                </div>
                
                <div class="form-group">
                    <label>Status:&nbsp;&nbsp;</label>
                    <label>Active</label>
                    <input id="active" name="status" value="True" checked type="radio">
                    <label>&nbsp;&nbsp;</label>
                    <label>In-Active</label>
                    <input id="in-active" name="status" value="False" type="radio">
                </div>
                
                <div class="form-group">
                    <label>Phone Number:</label><br>
                    <input type="text" name="phone_number" class="form-control" id="phone_number" placeholder="Phone number">
                </div>
            </div>
         
        </form>



    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->







<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>



@section Scripts{
    <script src="~/Asset/Common/Admin/Script/user.js"></script>
    <script src="~/Asset/Common/Admin/Script/user_details.js"></script>
    <script src="~/Asset/Common/Admin/Script/user_create_edit.js"></script>

}



