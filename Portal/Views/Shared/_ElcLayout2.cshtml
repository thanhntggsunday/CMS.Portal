<!DOCTYPE HTML>
<html>
<head>
    <title>Home :: w3layouts</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,300,400,600,700,900' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Libre+Baskerville:400,700' rel='stylesheet' type='text/css'>


    @Styles.Render("~/Content/ClientELearningCss")
    @Scripts.Render("~/bundles/ClientELearningJQuery")

    <script>
        $(function () {
            $("#slider").responsiveSlides({
                auto: true,
                nav: true,
                speed: 500,
                namespace: "callbacks",
                pager: true,
            });
        });

    </script>

</head>
<body>
    <!-- header -->
    <div class="header">
        <div class="container">

            @*<div style="float: right;"><a>Hello there </a>| <a>Logout</a> </div>*@
            @Html.Partial("_LoginPartial")

            <div class="clearfix"></div>
            @*<br />*@

            <div class="logo">
                <a href="/"><img style="width: 200px; height: 75px" src="/Asset/eLearning/Client/Libraries/images/logo.png" class="img-responsive" alt=""></a>

            </div>



            <div class="head-nav">
                <span class="menu"> </span>
                <ul class="cl-effect-1">
                    <li class="active"><a href="/ElcHome">Home</a></li>
                    <li><a href="/ElcHome/About">GIỚI THIỆU</a></li>
                    <li><a href="/ElcContent">BLOG</a></li>
                    <li><a href="/ElcEvent">SỰ KIỆN</a></li>
                    <li><a href="/ElcCourse">KHÓA HỌC</a></li>

                    <li><a href="/ElcHome/Contact">LIÊN HỆ</a></li>
                    <div class="clearfix"></div>
                </ul>
            </div>
            <!-- script-for-nav -->
            <script>
                $("span.menu").click(function () {
                    $(".head-nav ul").slideToggle(300, function () {
                        // Animation complete.
                    });
                });
            </script>
            <!-- script-for-nav -->



            <div class="clearfix"> </div>
        </div>
    </div>
    <!-- header -->
    <div class="container">
        <div class="col-md-9 bann-right">
            <!-- banner -->
            @RenderSection("slide", required: false)
            <!-- banner -->
            <!-- nam-matis -->
            <div class="nam-matis">

                @RenderBody()

            </div>
            <!-- nam-matis -->
        </div>
        <div class="col-md-3 bann-left">
            <div class="b-search">
                <form method="get" action="/ElcContent/SearchContentByName">
                    <input type="text" value="@ViewBag.name" name="name" id="name" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Search';}">
                    <input type="submit" value="">
                </form>
            </div>

            <div>
                <h3>Danh mục khoá học</h3>
                <div class="">
                    @{ Html.RenderAction("CourseCategory", "ElcHome");}
                </div>
            </div>

            <div>
                <h3>Danh mục tin tức</h3>
                <div class="">
                    @{ Html.RenderAction("PostCategory", "ElcHome");}
                </div>
            </div>


            <div>
                <h3>Bài viết đã xem</h3>
                <div class="blo-top">

                </div>
            </div>



        </div>
        <div class="clearfix"> </div>

        @{ Html.RenderAction("Footer", "ElcHome");}


    </div>
    <script src="/Asset/Common/Cmm/_common.js"></script>
    <script type="text/javascript">

        function checkTimeOut() {
            debugger;
            var url = "/Home/CheckTimeOut";

            jQuery.ajax({
                url: url,
                type: "GET",
                dataType: "json",
                data: {},
                contentType: "application/json",
                success: function (data) {
                    console.log(data);
                    if (data) {
                        // window.location.href = "/Account/Login";
                    }
                },
                error: function (data) {
                    console.log(data);
                }
            });
        }

        setInterval(
