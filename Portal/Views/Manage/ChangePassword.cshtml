@model Portal.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<h2>@ViewBag.Title.</h2>

<div class="">
    <div class="">
        @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "register", role = "form" }))
        {
            <div class="">
                @Html.AntiForgeryToken()

                @Html.ValidationSummary("", new { @class = "text-danger" })
                <br />

                <div class="col-md-6" data-wow-delay="0.4s">
                    <span>Current password<label>*</label></span>
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                </div>
                <div class="clearfix"> </div>

                <div class="col-md-6" data-wow-delay="0.4s">
                    <span>New password<label>*</label></span>
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                </div>

                <div class="clearfix"> </div>

                <div class="col-md-6" data-wow-delay="0.4s">
                    <span>Confirm new password<label>*</label></span>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>

                <br />

                <div class="clearfix"> </div>
                <div class="register-but">
                   
                        <input type="submit" value="submit">
                        <div class="clearfix"> </div>
                   
                </div>

            </div>
                
        }
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}