

@using eLearning.Common.Dto
@model Common.ViewModel.Common.ApiResult<CourseDto>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Course Management
            @*<small>Control panel</small>*@
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active"> Course </li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <!-- Small boxes (Stat box) -->
        <div class="container-fluid">
            <div class="row">
                <div id="div-btn-add-emp" class="col-sm-12 col-md-1 col-lg-1" float-left
                     style="padding-bottom: 20px;float: right; display:flex; justify-content:flex-end;">
                    <button type="button" id="btnAddCourse" class="btn w-100 btn-info" style="float: right;">
                        <i class="fa fa-fw fa-plus"></i>
                        <b>Create</b>
                    </button>
                </div>

            </div>




            <div class="row">
                <div class="col-xs-12">

                    <!-- /.box -->

                    <div class="box">
                        @*<div class="box-header">
                                <h3 class="box-title">Data Table With Full Features</h3>
                            </div>*@
                        <!-- /.box-header -->
                        <div class="box-body">
                            <table id="tbl_Courses" class="table table-bordered table-striped"></table>
                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
                <!-- /.col -->
            </div>


            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
        <!-- /.row -->
        <!-- Main row -->
        <!-- /.row (main row) -->



        <form class="CourseForm" id="CourseForm" style="display: none">
            <label value="000" id="edit-flag"></label>
            <input type="text" name="id" disabled class="form-control d-none hidden" id="id">

            <div class="form-group">
                <label>Name:</label><br>
                <input type="text" name="CourseName" class="form-control" id="CourseName" placeholder="Name" required="required">
            </div>
            <div class="form-group">
                <label>Category:</label><br>
                <select id="ddlCategories"></select>
            </div>

            <div class="form-group">
                <label>Description:</label><br>
                <input type="text" name="Description" class="form-control" id="Description" placeholder="Description">
            </div>

            <div class="form-group">
                <label>Detail:</label><br>

                <textarea name="Detail" class="form-control" id="Detail" placeholder="Detail"></textarea>


            </div>






            <div class="form-group">
                <div class="col-md-2">
                    <label>Image:</label><br>
                    <img src="" id="Picture" height="50" width="50" />
                </div>
                <div class="col-md-8">
                    <br />
                    <br />
                    <input type="file" id="Browse" name="Browse" multiple="multiple" />
                    <input type="text" name="Image" class="form-control d-none hidden" id="Image" value="">
                </div>
            </div>

            <div class="clearfix"></div>
            <br />
            <br />

            <div class="form-group">
                <label>Status:</label>&nbsp;&nbsp;

                <input id="status" type="checkbox" value="true" name="status" />
                <label>Is active</label>
                @*<input type="hidden" value="false" name="status" />*@
            </div>


        </form>

    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<!-- Modal -->



@section Scripts{
    <script src="~/Asset/eLearning/Admin/Scripts/course.js"></script>

    <script>
        $("#Browse").click(function () {
            var finder = new CKFinder();
            finder.selectActionFunction = function (fileUrl) {
                //lấy file ảnh cuối cùng
                // fileUrl = fileUrl.substring(fileUrl.lastIndexOf("/") + 1);
                // $("#Picture").val(fileUrl);


                $("#avatar").val(fileUrl);
                $('#Picture').attr('src', fileUrl);
            };
            finder.popup();
        });
    </script>
}


